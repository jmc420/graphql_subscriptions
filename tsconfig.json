{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "isolatedModules": false,
        "lib": [
            "dom",
            "es2022"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noLib": false,
        "outDir": "./build",
        "removeComments": true,
        "target": "esnext",
        "types": [
            "jest",
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "typings"
    ],
    "include": [
        "src/ts/index.ts"
    ]
}